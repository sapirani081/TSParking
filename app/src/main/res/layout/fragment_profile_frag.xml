<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Profile_frag">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/HelloT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/helloUser" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/UserProfileT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/userprofile"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/FirstNameT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/firstname" />

        <TextView
            android:id="@+id/LastNameT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lastname" />

        <TextView
            android:id="@+id/EmailT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/email" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SearchingUserB"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:text="@string/searchingslot" />

            <Button
                android:id="@+id/SearchingSlotB"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:text="@string/searchingslot" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/BackB"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/back" />
    </LinearLayout>

</LinearLayout>